<build>
    <plugins>

      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-project-info-reports-plugin</artifactId>
	<version>2.7</version>
	<configuration>
	  <dependencyLocationsEnabled>false</dependencyLocationsEnabled>
	</configuration>
      </plugin>
      
      <!-- Le plugin Cobertura est ajouté ci-dessous -->
      <!-- La couverture de code est une technique qui permet de mesurer la quantité de code du programme qui est testé.
	   Cela sert donc à évaluer les tests. Si le taux de code testé est faible, cela veut dire que les tests sont mauvais
	   car il ne permettent pas de tester certaines parties du code qui pourraient contenir des erreurs ... -->
      <plugin>
	<groupId>org.codehaus.mojo</groupId>
	<artifactId>cobertura-maven-plugin</artifactId>
        <version>2.6</version>

	<configuration>
	  <formats>
	    <format>html</format> <!-- On sélectionne le format html -->
	  </formats>
	</configuration>
	<executions>
	  <!-- Le goal cobertura sera exécuté pendant la phase package -->
	  <execution>
	    <phase>package</phase>
	    <goals>
	      <goal>cobertura</goal>
	    </goals>
	  </execution>
	</executions>
      </plugin>

      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-javadoc-plugin</artifactId>
	<version>2.9.1</version>
	<executions>
	  <execution>
	    <phase>package</phase>
	    <goals>
	      <goal>javadoc</goal>
	    </goals>
	  </execution>
	</executions>
      </plugin>

    </plugins>
  </build>

  <build>
    <plugins>
      
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-project-info-reports-plugin</artifactId>
	<version>2.7</version>
	<configuration>
	  <dependencyLocationsEnabled>false</dependencyLocationsEnabled>
	</configuration>
      </plugin>

      <reportPlugins>

	<!-- Le plugin Cobertura est ajouté ci-dessous -->
	<!-- La couverture de code est une technique qui permet de mesurer la quantité de code du programme qui est testé.
	     Cela sert donc à évaluer les tests. Si le taux de code testé est faible, cela veut dire que les tests sont mauvais
	     car il ne permettent pas de tester certaines parties du code qui pourraient contenir des erreurs ... -->
	<plugin>
	  <groupId>org.codehaus.mojo</groupId>
	  <artifactId>cobertura-maven-plugin</artifactId>
	  <version>2.6</version>

	  <configuration>
	    <formats>
	      <format>html</format> <!-- On sélectionne le format html -->
	    </formats>
	  </configuration>
	</plugin>

      </reportPlugins>

    </plugins>

